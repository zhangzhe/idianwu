<div class="dl-horizontal">
	<dd>
		<%= form_tag items_path, :method => 'get', :class => "form-search" do %>
		<div class="input-append">
			<%= search_field_tag :search, params[:search], :class => "span4", :placeholder => '请输入宝贝信息' %>
			<%= submit_tag "搜索", :name => nil, :class => "btn" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to '新建宝贝', new_item_path, :class => 'btn' %>
		</div>
		<% end %>
	</dd>
</div>

<hr>

<% @items.each do |item| %>
  <% @item = item %>
  <%= render 'item' %>
<% end %>

<%= will_paginate @items %>

